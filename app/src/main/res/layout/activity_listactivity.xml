<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listactivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List view"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:textStyle="bold"
    />


    <Button
        android:id="@+id/showCarsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Cars"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/showBikesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/showCarsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Show Bikes" />

    <ListView
        android:id="@+id/carListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showBikesButton"
        android:visibility="gone" />



</RelativeLayout>